<%- contentFor("body") %>

  <div class="container">

    <div class="row my-3">
      <div class="col-sm-12">
        <h1>
          <%= chapter.book.title %>: <%= chapter.chapterNo %>
        </h1>
      </div>
    </div>

    <div class="row mb-3">
      <div class="d-grid gap-2">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-block" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Add Verse
        </button>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <ul class="list-unstyled">
          <% chapter.verses.forEach(element=> { %>
            <li>
              <%= element.verseNo %>. <%= element.text %> 
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>



  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form class="gx-3 gy-2 align-items-center" action="/chapters/<%= chapter._id %>/new-verse" method="POST">
            <div class="mb-3">
              <label class="form-label" for="chapterNo">Verse Number</label>
              <input type="number" class="form-control" id="verseNo" name="verseNo" placeholder="Verse Number">
            </div>
            <div class="mb-3">
              <label for="text" class="form-label">Verse Text</label>
              <textarea class="form-control" id="text" name="text" rows="3"></textarea>
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Add</button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>